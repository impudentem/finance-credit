/*******************************
         Site Overrides
*******************************/
[class^="fa"]:before, [class*=" fa-"]:before, [class^="icon"]:before, [class*=" icon"]:before, i.icon {
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  font-family: 'Icons','Open Sans',Arial,Helvetica,sans-serif;
  width: 1em;
  height: 1em;
  // margin-right: .2em;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
  // margin-left: .2em;
  margin-top: -10%;
  margin-left: -10%;
  font-size: 120%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

@media screen and (-webkit-min-device-pixel-ratio:0) {
  @font-face {
    font-family: 'Icons','Open Sans',Arial,Helvetica,sans-serif;
    src: url('./themes/financeicon/assets/fonts/financeicon.svg#financeicon') format('svg');
  }
}

i.circular.icon:before {
  margin: 0;
}

i.icon.step-ok:before {
  content: '\2714';
  font-weight: normal;
  font-size: 0.7rem;
  line-height: 1.8rem;
  width: 1.8rem;
  height: 1.8rem;
  left: 0;
  top: 0;
  padding: 0;
  text-align: center;
} /* '✔' */
i.icon.block:before { content: '\e807'; margin: 0; } /* '' */
i.icon.arrow-input:before { content: '\fe3e'; } /* '︾' */
i.icon.arrow:before { content: '\fe40'; } /* '﹀' */
i.icon.like:before { content: '👍'; } /* '\1f44d' */
i.icon.wallet:before { content: '👛'; } /* '\1f45b' */
i.icon.user:before { content: '👤'; } /* '\1f464' */
i.icon.page:before { content: '📄'; } /* '\1f4c4' */
i.icon.marker-map:before { content: '📍'; } /* '\1f4cd' */
i.icon.smartphone-call:before { content: '📱'; } /* '\1f4f1' */
i.icon.smartphone-text:before { content: '📲'; } /* '\1f4f2' */
i.icon.adult:before { content: '🔞'; } /* '\1f51e' */
i.icon.code:before { content: '🔠'; } /* '\1f520' */
i.icon.time:before { content: '🕓'; } /* '\1f553' */
i.icon.calendar:before { content: '🗓'; } /* '\1f5d3' */
i.icon.wrench:before { content: '🛠'; } /* '\1f6e0' */
